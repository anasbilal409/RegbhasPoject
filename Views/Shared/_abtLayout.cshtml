<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Regbhas</title>
    <link href="https://fonts.googleapis.com/css2?family=Merienda&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/js/carofredsel.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/css/abtstyle.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-dark sticky-top bg ">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                Regbhas
            </a>
            <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#mainmenu">
                <span class="navbar-toggler-icon"></span>
                <i class="fa fa-arrow-circle-down"></i>
            </button>

            <div class="collapse navbar-collapse d-sm-inline-flex flex-sm-row-reverse" id="mainmenu">
                <ul class="navbar-nav mr-auto mt-2  mr-lg-2" style="font-family: 'Alata', sans-serif;font-size:12vh; ">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="design" asp-controller="home"> <i class="fa fa-sign-out"></i> Gallery </a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#"> <i class="fa fa-tags"></i> Services </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-action="#" asp-controller="home"><i class="fa fa-bed"></i>  Interior Design </a>
                            <a class="dropdown-item" asp-action="#" asp-controller="home"><i class="fa fa-couch"></i>  Lighting </a>
                            <a class="dropdown-item" asp-action="#" asp-controller="home"><i class="fa fa-chair"></i>  Painting </a>
                            <a class="dropdown-item" asp-action="#" asp-controller="home"><i class="fa fa-tv"></i>  Furniture </a>
                            <a class="dropdown-item" asp-action="#" asp-controller="home"><i class="fa fa-table"></i>  Home Renovation</a>
                            <a class="dropdown-item" asp-action="#" asp-controller="home"><i class="fa fa-table"></i>  Commercial Design </a>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-action="About" asp-controller="home"> <i class="fa fa-sign-out"></i> About Us </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-action="contact" asp-controller="home"> <i class="fa fa-sign-out"></i> Contact Us </a>
                    </li>



                </ul>
            </div>
        </nav>
        <div class="carousel slide" data-ride="carousel" id="carouselExampleIndicators">
            <ol class="carousel-indicators">
                <li class="active" data-slide-to="0" data-target="#carouselExampleIndicators"></li>
                <li data-slide-to="1" data-target="#carouselExampleIndicators"></li>
                <li data-slide-to="2" data-target="#carouselExampleIndicators"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img alt="First slide" class="d-block w-100" src="~/Images/interiorfinal.png">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="animated bounceInRight" style="animation-delay: 1s">Interior Design</h5>
                        <p class="animated bounceInLeft" style="animation-delay: 2s"></p>
                        <p class="animated bounceInRight" style="animation-delay: 3s"><a href="#">More Info</a></p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img alt="Second slide" class="d-block w-100" src="~/Images/lighting final.jpg">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="animated slideInDown" style="animation-delay: 1s">Lighting</h5>
                        <p class="animated fadeInUp" style="animation-delay: 2s"></p>
                        <p class="animated zoomIn" style="animation-delay: 3s"><a href="#">More Info</a></p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img alt="Third slide" class="d-block w-100" src="~/Images/furniturefinal.jpg">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="animated zoomIn" style="animation-delay: 1s">Furniture</h5>
                        <p class="animated fadeInLeft" style="animation-delay: 2s"></p>
                        <p class="animated zoomIn" style="animation-delay: 3s"><a href="#">More Info</a></p>
                    </div>
                </div>
            </div><a class="carousel-control-prev" data-slide="prev" href="#carouselExampleIndicators" role="button"><span aria-hidden="true" class="carousel-control-prev-icon"></span> <span class="sr-only">Previous</span></a> <a class="carousel-control-next" data-slide="next" href="#carouselExampleIndicators" role="button"><span aria-hidden="true" class="carousel-control-next-icon"></span> <span class="sr-only">Next</span></a>
        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
       
    </footer>


    <div class="modal fade" id="advdialog" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 id="advdialog-title" class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                </div>
                <div id="advdialog-body" class="modal-body">
                </div>
            </div>
        </div>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js">
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
