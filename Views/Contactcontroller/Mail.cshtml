@model Regbhas.Models.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

@ViewBag.msg
<h1>Index</h1>


<form asp-action="index" asp-controller="contact" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <div class="input-group">
            <span class="input-group-prepend">
                <label class="input-group-text"><i class="fa fa-edit"></i></label>
            </span>
            <input type="text" class="form-control" asp-for="Name" placeholder="Enter Your Name" />
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-prepend">
                <label class="input-group-text"><i class="fa fa-edit"></i></label>
            </span>
            <input type="text" class="form-control" asp-for="Phone" placeholder="Enter Your Name" />
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-prepend">
                <label class="input-group-text"><i class="fa fa-edit"></i></label>
            </span>
            <input type="text" class="form-control" asp-for="Email" placeholder="Enter Your Name" />
        </div>
    </div>
   
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-prepend">
                <label class="input-group-text"><i class="fa fa-edit"></i></label>
            </span>
            <input type="text" class="form-control" asp-for="Subject" placeholder="Enter Your Name" />
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-prepend">
                <label class="input-group-text"><i class="fa fa-edit"></i></label>
            </span>
            <input type="text" class="form-control" asp-for="Content" placeholder="Enter Your Name" />
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-arrow-circle-right"></i> Send
        </button>
    </div>
</form>
