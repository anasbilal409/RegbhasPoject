@model ProjectViewModel


<form id="postadvform" asp-action="postproject" asp-controller="project" method="post" enctype="multipart/form-data">
    <ul class="nav nav-tabs">
        <li class="nav-item"> <a class="nav-link active" href="#general" data-toggle="tab">General</a></li>
        <li class="nav-item"> <a class="nav-link" href="#ProjectDetail" data-toggle="tab">Product Detail</a></li>
        <li class="nav-item"> <a class="nav-link" href="#images" data-toggle="tab">Images</a> </li>
    </ul>

    <div class="tab-content" style="min-height:360px">
        <div id="general" class="tab-pane active mytab-pane">

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-prepend">
                        <label class="input-group-text"><i class="fa fa-edit"></i></label>
                    </span>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter Product Name" />
                </div>
            </div>



            <div class="form-group">
                <div class="form-row">
                    <div class="col">
                        <div class="input-group">
                            <span class="input-group-prepend">
                                <label class="input-group-text"><i class="fa fa-tags"></i></label>
                            </span>
                            <select id="categoriesddl" name="categories" class="form-control" asp-items="@Model.TopLevelCategories">
                            </select>
                        </div>
                    </div>
                    <div id="div4subcategories" class="col">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-row">
                    <div class="col">
                       
                    </div>
                    <div id="div4cities" class="col">
                    </div>
                </div>
            </div>



        </div>
        <div id="ProjectDetail" class="tab-pane mytab-pane">
            <div class="form-group">
                <textarea asp-for="@Model.Pdetail" class="form-control" rows="12"></textarea>
            </div>
        </div>
        <div id="images" class="tab-pane mytab-pane">
            <div class="form-group">
                <table class="table">
                    <thead>
                        <tr class="d-flex">
                            <th class="col-12">

                                <button id="btnphadd" type="button" class="btn btn-primary btn-sm dg-btnadd"> <i class="fa fa-plus"></i> Add</button>
                            </th>
                        </tr>
                    </thead>
                    <tbody id="phtablbody">
                    </tbody>
                </table>


            </div>
        </div>

    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-arrow-circle-right"></i>  Add Project
        </button>
    </div>
</form>



