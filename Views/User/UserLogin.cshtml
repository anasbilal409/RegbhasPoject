
@model LoginModel
@{
    ViewData["Title"] = "UserLogin";
    Layout = "~/Views/Shared/_CommonLayout.cshtml";
}

<section class="col-6 offset-3">
    <div class="card" style="margin-top:40px">
        <div class="card-body">
            <center><h4 class="card-title"> <i class="fa fa-sign-in"></i>  Login  </h4></center>

            <div class="card-text">
                <form asp-action="UserLogin" asp-controller="User" method="post">

                    <div class="list-group">
                        <div class="list-group-item">
                            <span></span>
                            <center> <i class="fa fa-user rounded-circle w-50 fa-5x"></i></center>


                        </div>

                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-prepend">
                                <label class="input-group-text" for="loginid">
                                    <i class="fa fa-user"
                                       aria-hidden="true"></i>
                                </label>
                            </span>
                            <input asp-for="LoginId" type="text" class="form-control" placeholder="Login Id" required="required" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-prepend">
                                <label class="input-group-text" for="loginid">
                                    <i class="fa fa-key"
                                       aria-hidden="true"></i>
                                </label>
                            </span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-arrow-circle-right"></i> Login</button>
                        <button type="reset" class="btn btn-outline-primary"><i class="fa fa-arrow-circle-right"></i> Cancel</button>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                                Remember me
                            </label>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>


